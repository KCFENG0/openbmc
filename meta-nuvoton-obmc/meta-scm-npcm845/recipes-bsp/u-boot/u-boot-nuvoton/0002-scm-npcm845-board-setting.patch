+	clrbits_le32(0xf0801084, BIT(7) | BIT(9) | BIT(5));
+	clrbits_le32(0xf0801088, BIT(7) | BIT(9) | BIT(5));
+	clrbits_le32(0xf080108c, BIT(7) | BIT(9) | BIT(5));
+	clrbits_le32(0xf0801090, BIT(7) | BIT(9) | BIT(5));
